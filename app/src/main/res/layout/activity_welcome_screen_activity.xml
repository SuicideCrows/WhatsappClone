<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startup.WelcomeScreenActivityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:text="Welcome to Whatasapp Clone"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/icon" />

        <TextView
            android:text="Read our Privacy Policy. Tab agree and continue to accept the terms of service"
            android:padding="15dp"
            android:textSize="17.5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColor"
            android:text="AGREE AND CONTINUE"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:text="made by Adam"
          android:textSize="15sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <TextView
          android:text="Powered with â™¡"
          android:textSize="18sp"
          android:textStyle="bold"
          android:textColor="@color/PrimaryColor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>





    </LinearLayout>


</RelativeLayout>